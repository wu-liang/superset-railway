{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "services": [
    {
      "name": "superset-init",
      "type": "service:dockerfile",
      "source": {
        "type": "repository",
        "repo": "https://github.com/wu-lang/superset-railway",
        "branch": "main",
        "dockerfilePath": "./Dockerfile"
      },
      "startCommand": "superset db upgrade && superset init",
      "volumes": [
        {
          "name": "superset-config",
          "mountPath": "/app/pythonpath"
        }
      ],
      "envs": [
        {
          "name": "SECRET_KEY",
          "required": true,
          "description": "A strong secret key for Superset encryption (generate with `openssl rand -base64 32`)"
        },
        {
          "name": "REDIS_URL",
          "value": "${{redis.REDIS_URL}}",
          "required": true,
          "description": "Redis URL for caching and Celery broker"
        },
        {
          "name": "DATABASE_URL",
          "value": "${{postgres.DATABASE_URL}}",
          "required": true,
          "description": "PostgreSQL URI for Superset metadata"
        },
        {
          "name": "PYTHONPATH",
          "value": "/app/pythonpath",
          "required": true,
          "description": "Path to custom Superset configuration"
        },
        {
          "name": "MAPBOX_API_KEY",
          "required": false,
          "description": "Optional Mapbox API key for map visualizations"
        }
      ]
    },
    {
      "name": "superset-app",
      "type": "service:dockerfile",
      "source": {
        "type": "repository",
        "repo": "https://github.com/wu-lang/superset-railway",
        "branch": "main",
        "dockerfilePath": "./Dockerfile"
      },
      "ports": [
        {
          "port": 8088,
          "protocol": "TCP"
        }
      ],
      "startCommand": "/app/docker/entrypoints/run-server.sh",
      "volumes": [
        {
          "name": "superset-config",
          "mountPath": "/app/pythonpath"
        },
        {
          "name": "superset-home",
          "mountPath": "/app/superset_home"
        }
      ],
      "envs": [
        {
          "name": "SECRET_KEY",
          "required": true
        },
        {
          "name": "TAG",
          "value": "5.0.0",
          "description": "Superset image tag"
        },
        {
          "name": "REDIS_URL",
          "value": "${{redis.REDIS_URL}}",
          "required": true
        },
        {
          "name": "DATABASE_URL",
          "value": "${{postgres.DATABASE_URL}}",
          "required": true
        },
        {
          "name": "PYTHONPATH",
          "value": "/app/pythonpath",
          "required": true
        },
        {
          "name": "MAPBOX_API_KEY",
          "required": false
        }
      ],
      "healthcheck": {
        "enabled": true,
        "path": "/health",
        "port": 8088,
        "type": "HTTP"
      }
    },
    {
      "name": "superset-worker",
      "type": "service:dockerfile",
      "source": {
        "type": "repository",
        "repo": "https://github.com/wu-lang/superset-railway",
        "branch": "main",
        "dockerfilePath": "./Dockerfile"
      },
      "startCommand": "celery --app=superset.tasks.celery_app:app worker --pool=prefork -O fair -c 4",
      "volumes": [
        {
          "name": "superset-config",
          "mountPath": "/app/pythonpath"
        }
      ],
      "envs": [
        {
          "name": "SECRET_KEY",
          "required": true
        },
        {
          "name": "REDIS_URL",
          "value": "${{redis.REDIS_URL}}",
          "required": true
        },
        {
          "name": "DATABASE_URL",
          "value": "${{postgres.DATABASE_URL}}",
          "required": true
        },
        {
          "name": "PYTHONPATH",
          "value": "/app/pythonpath",
          "required": true
        }
      ]
    },
    {
      "name": "superset-worker-beat",
      "type": "service:dockerfile",
      "source": {
        "type": "repository",
        "repo": "https://github.com/wu-lang/superset-railway",
        "branch": "main",
        "dockerfilePath": "./Dockerfile"
      },
      "startCommand": "celery --app=superset.tasks.celery_app:app beat --pidfile= --schedule=/tmp/celerybeat-schedule",
      "volumes": [
        {
          "name": "superset-config",
          "mountPath": "/app/pythonpath"
        }
      ],
      "envs": [
        {
          "name": "SECRET_KEY",
          "required": true
        },
        {
          "name": "REDIS_URL",
          "value": "${{redis.REDIS_URL}}",
          "required": true
        },
        {
          "name": "DATABASE_URL",
          "value": "${{postgres.DATABASE_URL}}",
          "required": true
        },
        {
          "name": "PYTHONPATH",
          "value": "/app/pythonpath",
          "required": true
        }
      ]
    },
    {
      "name": "redis",
      "type": "service:database",
      "image": "redis:7-alpine"
    },
    {
      "name": "postgres",
      "type": "service:database",
      "image": "postgres:16",
      "envs": [
        {
          "name": "POSTGRES_USER",
          "value": "superset"
        },
        {
          "name": "POSTGRES_PASSWORD",
          "value": "superset"
        },
        {
          "name": "POSTGRES_DB",
          "value": "superset"
        }
      ],
      "volumes": [
        {
          "name": "postgres-data",
          "mountPath": "/var/lib/postgresql/data"
        }
      ]
    }
  ]
}
